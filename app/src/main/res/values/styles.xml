<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MenuProfileName" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/medium_gap</item>
    </style>

    <style name="ListItem" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/medium_gap</item>
    </style>

    <style name="ListHeader" parent="ListItem">
        <item name="android:textStyle">bold</item>
        <item name="android:background">#ccc</item>
    </style>

    <style name="SpinnerLike" parent="AppTheme">
        <item name="android:paddingTop">@dimen/medium_gap</item>
        <item name="android:paddingBottom">@dimen/medium_gap</item>
        <item name="android:layout_marginLeft">@dimen/small_gap</item>
        <item name="android:layout_marginRight">@dimen/small_gap</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">#000</item>
        <item name="android:background">@drawable/background_spinner_like</item>
        <item name="android:drawableRight">@drawable/triangle</item>
    </style>

</resources>
